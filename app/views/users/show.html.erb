<section class="offset-md-2 col-md-8 col-xs-12">
  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-12 py-4">
      <% if user_authenticated? && is_admin? %>
        <div class="w-100 text-center mb-3">
          <h1>Información del usuario</h1>
          <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-dark" style="width: 200px;">
        </div>
        <div class="row">
          <div class="col-md-12 text-center">
            <div>
              <p><strong>NOMBRE DE USUARIO: </strong><%= @user.username %></p>
            </div>
            <div>
              <p><strong>CORREO ELECTRÓNICO: </strong> <%= @user.email %></p>
            </div>
            <div>
              <p><strong>CONTRASEÑA: </strong> <%= @user.password %></p>
            </div>
            <div>
              <p><strong>ADMIN: </strong> <%= @user.admin %></p>
            </div>
          </div>
        </div>
        <div>
          <%= link_to "Editar", edit_user_path(@user.id), class: "btn btn-success" %>
          <%= link_to "Eliminar", @user, method: :delete, class: "btn btn-danger" %>
          <%= link_to 'Volver', users_path, class: "btn btn-primary ml-2" %>
        </div>
      </div>
      <%else %>
        <h1 class="mb-2">ACCESO RESTRINGIDO</h1>
      <%end %>
  </div>
</section>